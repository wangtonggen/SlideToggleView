<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".MainActivity">

        <cn.onlyloveyd.slidetoggleview.shimmer.ShimmerTextView
            android:id="@+id/shimmerTextView"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="40dp"
            android:gravity="center"
            android:paddingHorizontal="10dp"
            android:text="一闪一闪亮晶晶"
            android:textColor="@color/colorAccent"
            android:textSize="16sp"
            app:shimmer_auto_start="true"
            app:shimmer_duration="2000" />


        <cn.onlyloveyd.slidetoggleview.SlideToggleViewTest
            android:id="@+id/slideToggleView"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_marginTop="40dp"
            android:background="@drawable/shape_test1"
            app:stv_remain="200dp"
            app:stv_shimmer_need="false"
            app:stv_type="TEXTVIEW"
            app:stv_unlock_drawable_need="true"
            app:stv_unlock_drawable="@drawable/shape_test"
            app:stv_slideBlock="@drawable/shape_test2"
            app:stv_text="右滑解锁" />

        <cn.onlyloveyd.slidetoggleview.SlideToggleView
            android:id="@+id/slideToggleView2"
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:layout_marginTop="40dp"
            android:background="@drawable/slide_rect_bg"
            app:stv_blockBottomMargin="2dp"
            app:stv_blockLeftMargin="2dp"
            app:stv_blockRightMargin="2dp"
            app:stv_blockTopMargin="2dp"
            app:stv_remain="80dp"
            app:stv_slideBlock="@drawable/slide_two"
            app:stv_text="滑块2" />

        <cn.onlyloveyd.slidetoggleview.SlideToggleViewTest
            android:id="@+id/slideToggleView3"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="40dp"
            android:background="@color/colorAccent"
            app:stv_blockBottomMargin="0dp"
            app:stv_blockLeftMargin="0dp"
            app:stv_blockRightMargin="0dp"
            app:stv_blockTopMargin="0dp"
            app:stv_remain="60dp"
            app:stv_slideBlock="@drawable/slide_three"
            app:stv_text="滑块3" />


    </LinearLayout>
</layout>